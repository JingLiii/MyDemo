/* 每日必看 start */

.everyday {
  height: 670rpx;
  padding: 0 0 0 42rpx;
  background-color: #fff;
}

.everyday .title {
  height: 138rpx;
  position: relative;
}

.everyday .title .icon_eye {
  position: absolute;
  top: 50%;
  margin-top: -21rpx;
}

.everyday .title .icon_eye image {
  width: 42rpx;
  height: 42rpx;
}

.everyday .title text {
  margin-left: 55rpx;
  height: 138rpx;
  line-height: 138rpx;
}

.everyday .everyday-sroll .everyday-sroll-box{
  margin-right: 12rpx;
  display: inline-block;
}
.everyday .everyday-sroll .everyday-sroll-box .everyday-content{
  width: 303rpx;
  height: 505rpx;
}

/* 每日必看 end */

