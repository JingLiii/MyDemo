  padding: 0 0 0 40rpx;
  margin: 27rpx 0;
  height: 130rpx;
  border-bottom: 3rpx solid #e5e5e5;
  background-color: #fff;
}
.content-bar {
  /* height: 130rpx; */
}
.content-bar .box {
  display: inline-block;
  width: 207rpx;
  height: 120rpx;
  line-height: 120rpx;
  text-align: center;
  margin: 0 30rpx 0 0;
}
.content-bar .native {
  color: #fe7b5d;
  border-bottom: 3rpx solid #fe7b5d;

}
